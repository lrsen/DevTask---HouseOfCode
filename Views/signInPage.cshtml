@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "master.cshtml";
}

<!-- Main -->
<body class="background-img-path-signin">
    <div class="container-fluid mt-5 ">
        <header class="row justify-content-center">
            <h2 class="display-4 font-weight-bold headline-text mb-4">@Model.Value("pageTitle")</h2>
        </header>
        <div class="row justify-content-center">
            <div class="shadow-lg p-3 mb-5 bg-white rounded-corners">
                <div class="mx-3 my-3">
                    <div class="my-5">
                        <div class="my-5">
                            <div class="my-5">
                                @{ Html.RenderAction("RenderLogin", "Member"); }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <center>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link text-on-sign-in-page" href="/sign-up-page">Sign Up</a> </li>
                    <li class="nav-item"><a class="nav-link text-on-sign-in-page" href="/forgot-password-page">Forgot Password?</a></li>
                </ul>
            </center>
        </div>
    </div>
</body>

