<body>
    <!-- Nav -->
    <div class="container-fluid">
        <div class="justify-content-center">
            <nav id="nav" class="navbar navbar-expand-lg navbar-light mt-3">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="col-7 ml-auto pl-5">
                    <a class="navbar-brand" href="/"><img src="~/images/logo.png" width="225" /></a>
                </div>
                <div class="col-4 mt-3">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item pr-4"><a class="nav-link text-color-hoc" href="#">SDK'S</a></li>
                            <li class="nav-item pr-4"><a class="nav-link text-color-hoc" href="#">Pricing</a></li>
                            <li class="nav-item pr-4"><a class="nav-link text-color-hoc" href="#">Contact</a></li>
                            @{
                                if (!Umbraco.MemberIsLoggedOn())
                                {
                                    <li class="nab-item"><a class="nav-link font-weight-bold sign-in-text" href="/sign-in-page">Sign in</a></li>
                                }
                                else
                                {
                                    Html.RenderAction("RenderLogout", "Member");
                                }
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    @RenderBody()

